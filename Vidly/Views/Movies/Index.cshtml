
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div class="container" style="margin:0;border:0;">
    <div class="row">
        <div class="col-sm-12 nopadding" style="margin-bottom:10px;border:0;">
            @Html.ActionLink("Add Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
        </div>
        <div class="col-sm-12 nopadding" style="margin:0;border:0;">
            <table class="table table-responsive table-bordered" style="width:70%">
                <thead>
                    <tr>
                        <th>Movie</th>
                        <th>Genre</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var movie in Model)

                        {
                            <tr>
                                <td>
                                    @Html.ActionLink((string)movie.Name, "Edit", "Movies", new { id = @movie.Id }, null)
                                </td>
                                <td>
                                    @movie.genre.name
                                </td>
                            </tr>
                        }
                    }
                    else {
                        <tr>
                            <td colspan="2">No movies found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
